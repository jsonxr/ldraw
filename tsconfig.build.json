{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2017",
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "lib": ["esnext", "DOM"]
  },

  "exclude": ["node_modules/**/*", "dist/**/*", "lib/**/*"]
}
