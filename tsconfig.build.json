{
  "compilerOptions": {
    "module": "ES2015",
    "target": "es2017",
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "lib": ["esnext", "dom"]
  },

  "exclude": ["node_modules", "dist/**/*"]
}
